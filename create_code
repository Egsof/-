    <script>
        function generateAndSend() {
            var name = document.getElementById('name').value.trim();
            var age = document.getElementById('age').value;

            if (name.length < 3 || !/^[a-zA-Z\s]+$/.test(name)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Nama Tidak Valid',
                    text: 'Harap masukkan nama yang valid (minimal 3 karakter dan hanya huruf).',
                    confirmButtonColor: '#dc3545'
                });
                return;
            }

            if (age < 10 || age > 45) {
                Swal.fire({
                    icon: 'error',
                    title: 'Umur Tidak Valid',
                    text: 'Umur harus antara 10 sampai 45 tahun.',
                    confirmButtonColor: '#dc3545'
                });
                return;
            }

            var code = name + '.' + age + '-Owalasoft_Verify:Af7jPq0R4Zb6vH1LgW8yXm9dU3iKsBf5NoY2TtVc1zJQ7wMh0AxlD5e3pCnZ.ai';
            var encodedCode = encodeURIComponent(code);
            var whatsappLink = "https://wa.me/6285369942151?text=" + encodedCode;

            Swal.fire({
                icon: 'success',
                title: 'Code Dihasilkan',
                text: 'Code berhasil dihasilkan dan akan dikirim ke WhatsApp.',
                confirmButtonText: 'Buka WhatsApp',
                confirmButtonColor: '#28a745'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.open(whatsappLink, '_blank');
                }
            });
        }
    </script>
